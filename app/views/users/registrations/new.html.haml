%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "users/shared/error_messages", resource: resource
  .form-group
    .form-text-wrap
      %label.form-text ニックネーム
      %span.indispensable 必須
    = f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) order太郎", maxlength:"40"
  .form-group
    .form-text-wrap
      %label.form-text メールアドレス
      %span.indispensable 必須
    = f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true
  .form-group
    .form-text-wrap
      %label.form-text パスワード
      %span.indispensable 必須
    = f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字"
    %p.info-text ※英字と数字の両方を含めて設定してください
  .form-group
    .form-text-wrap
      %label.form-text パスワード(確認)
      %span.indispensable 必須
    = f.password_field :password, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい"
  .form-group
    .form-text-wrap
      %label.form-text お名前(全角)
      %span.indispensable 必須
    .input-name-wrap
      = f.text_area :family_name, class:"input-name", id:"first-name", placeholder:"例) 山田"
      = f.text_area :first_name, class:"input-name", id:"last-name", placeholder:"例) 陸太郎"
  .form-group
    .form-text-wrap
      %label.form-text 生年月日
      %span.indispensable 必須
    .input-birth-wrap
      = raw sprintf(                               |
        f.date_select(                             |
          :birthday,                               |
          class:'select-birth',                    |
          id:"birth-date",                         |
          use_month_numbers: true,                 |
          prompt:'--',                             |
          start_year: 1930,                        |
          end_year: (Time.now.year - 5),           |
          date_separator: '%s'),                   |
        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" |
    .actions
      = f.submit "Sign up"
    = render "users/shared/links"
